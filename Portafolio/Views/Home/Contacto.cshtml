
@{
    ViewData["Title"] = "Contacto";

}
<h1>Formulario de Contacto</h1>

<form asp-controller="Home" asp-action="Contacto">
    <div class="mb-3">
        <label for="nombre" class="form-label">Nombre</label>
        <input type="text" class="form-control" id="nombre" required name="nombre" placeholder="Escribe tu nombre" />
        <div class="invalid-feedback">
            Por favor, introduce un nombre.
        </div>
    </div>
    <div class="mb-3">
        <label for="email" class="form-label">E-mail</label>
        <input type="email" class="form-control" id="email" name="email" placeholder="Escribe tu correo electronico" required />
        <div class="invalid-feedback">
            Por favor, introduce tu correo.
        </div>
    </div>
    <div class="mb-3">
        <label for="mensaje" class="form-label">Mensaje</label>
        <textarea class="form-control" id="mensaje" name="mensaje" rows="3" required></textarea>
        <div class="invalid-feedback">
            Por favor, introduce tu mensaje.
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Enviar</button>
</form>
